# Basic-Calculator

import java.util.Scanner; // import java's library for scanner

public class CalculatorTest // class CalculatorTest is declared
{
	public static void main( String[] args) // main method void is declared
	{
		Scanner input = new Scanner( System.in ); // new scanner for inputting integers is declared
		Scanner reader = new Scanner( System.in ); // new scanner for inputting characters
	
		// variables declared
		int number1; 
		int number2; 
		int product; 
		int	quotient; 
		int	sum;
		int	difference; 
		
		
		System.out.print( "Enter first integer: ");
		number1 = input.nextInt();
		
		System.out.print( "Enter an operator(*,/,+,-): " );
		char operator = reader.next(".").charAt(0);
		
		System.out.print( "Enter second integer: ");
		number2 = input.nextInt();
		
		product = number1 * number2;
		quotient = number1 / number2;
		sum = number1 + number2;
		difference = number1 - number2;
		
		if ( operator == '*' )
			System.out.printf( "The product is %d " , product );
		
		if ( operator == '/')
			System.out.printf( "The quotient is %d " , quotient );
		
		if ( operator == '+')
			System.out.printf( "The sum is %d " , sum );
		
		if (operator == '-')
			System.out.printf( "The difference is %d " , difference );
		
			
	} // main method ends

} // class ends
